{
  "name": "shopify-image-match-api",
  "version": "1.0.0",
  "description": "Vercel serverless API for matching card images against Shopify product database",
  "main": "api/shopify-image-match.js",
  "type": "module",
  "scripts": {
    "dev": "vercel dev",
    "build": "vercel build", 
    "deploy": "vercel --prod",
    "deploy-preview": "vercel",
    "test": "jest",
    "lint": "eslint api/**/*.js",
    "start": "vercel dev"
  },
  "dependencies": {
    "shopify-api-node": "^3.12.6",
    "@google-cloud/vision": "^4.0.2",
    "sharp": "^0.32.6",
    "multiparty": "^4.2.3",
    "axios": "^1.6.0",
    "string-similarity": "^4.0.4",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "vercel": "^32.0.0",
    "@vercel/node": "^3.0.0",
    "jest": "^29.7.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/shopify-image-match.git"
  },
  "keywords": [
    "shopify",
    "image-recognition", 
    "card-matching",
    "trading-cards",
    "vercel",
    "serverless",
    "computer-vision",
    "api"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/shopify-image-match/issues"
  },
  "homepage": "https://github.com/your-username/shopify-image-match#readme",
  "vercel": {
    "functions": {
      "api/shopify-image-match.js": {
        "maxDuration": 30
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    }
  }
}
